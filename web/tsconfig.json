{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "baseUrl": "src",
    "strictNullChecks": true,
    "sourceMap": true,

    "paths": {
      "react": ["../node_modules/preact/compat/"],
      "react-dom": ["../node_modules/preact/compat/"]
    }
  },
  "include": ["node_modules/vite/client.d.ts", "src/**/*", "mock/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
